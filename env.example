# Feed Comparator - Environment Variables Configuration
# Copy this file to .env and update with your values

# Flask Secret Key (REQUIRED for production!)
# Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-generate-a-random-one

# Allowed domains for XML feeds (comma-separated, leave empty to allow all)
# Example: ALLOWED_DOMAINS=cropink.com,dataoctopus.io,example.com
ALLOWED_DOMAINS=

# Maximum XML file size in bytes (default: 2GB = 2147483648)
MAX_XML_SIZE=2147483648

# Request timeout in seconds for fetching XML feeds
REQUEST_TIMEOUT=30

# Flask environment (development/production)
FLASK_ENV=production

# Debug mode (False for production)
DEBUG=False

# Port for Flask application
PORT=5001

